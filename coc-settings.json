{
  "suggest.noselect": true,
  "suggest.enablePreview": true,
  "suggest.enablePreselect": false,
  "suggest.disableKind": true,
  "codeLens.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "*"
  ],
  "languageserver": {
    "nix": {
      "command": "nil",
      "filetypes": [
        "nix"
      ],
      "rootPatterns": [
        "flake.nix"
      ],
      "settings": {
        "nil": {
          "formatting": {
            "command": [
              "nixpkgs-fmt"
            ]
          }
        }
      }
    },
    "json": {
      "command": "vscode-json-languageserver",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "json"
      ],
      "initializationOptions": {
        "provideFormatter": true
      }
    },
    "haskell": {
      "command": "haskell-language-server",
      "args": [
        "--lsp"
      ],
      "rootpatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ],
      "settings": {
        "haskell": {
          "checkparents": "checkonsave",
          "checkproject": true,
          "maxcompletions": 40,
          "formattingprovider": "ormolu",
          "plugin": {
            "tactic": {
              "globalon": true
            },
            "haddockComments": {
              "globalon": true
            },
            "stan": {
              "globalon": true
            },
            "hlint": {
              "globalon": true
            }
          }
        }
      }
    }
  }
}
